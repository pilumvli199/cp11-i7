# .env.example
# ================================
# SmartAPI (Angel One) credentials
# ================================

# Your Angel One SmartAPI key (from developer console)
SMARTAPI_API_KEY=your_api_key_here

# Your Angel One Client ID (e.g. P482208)
SMARTAPI_CLIENT_ID=your_client_id_here

# Your Angel One password (the one you use to login Angel One)
SMARTAPI_CLIENT_PWD=your_password_here

# Your TOTP secret (BASE32 string, from Authenticator app QR code)
SMARTAPI_TOTP_SECRET=your_base32_totp_secret_here


# ================================
# Other integrations (optional)
# ================================

# OpenAI API key (if bot uses GPT for analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Telegram bot token (for sending signals/alerts)
TELEGRAM_BOT_TOKEN=your_telegram_token_here

# Telegram chat id (to send alerts to a specific user/group)
TELEGRAM_CHAT_ID=your_chat_id_here
